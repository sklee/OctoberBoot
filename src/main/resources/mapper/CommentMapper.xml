<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sklee.repository.CommentMapper">

    <resultMap id="CommentResultMap" type="com.sklee.entity.Comment">
        <id property="cno" column="cno"/>
        <result property="bno" column="bno"/>
        <result property="ccomment" column="ccomment"/>
        <result property="cdate" column="cdate"/>
        <association property="member" javaType="com.sklee.entity.Member">
            <id property="mno" column="mno"/>
            <result property="mname" column="mname"/>
            <result property="mid" column="mid"/>
        </association>
    </resultMap>

    <!-- 댓글 목록 조회 -->
    <select id="findCommentsByBoardId" parameterType="int" resultType="com.sklee.entity.Comment">
        SELECT c.cno, c.bno, c.ccomment, c.cdate, m.mname, m.mid
        FROM comment c
        JOIN member m ON m.mno = c.mno
        WHERE c.bno = #{bno} AND c.cdel = 'N'
        ORDER BY c.cdate DESC
    </select>

    <!-- 댓글 저장 -->
    <insert id="insertComment" parameterType="com.sklee.entity.Comment">
        INSERT INTO comment (bno, mno, ccomment, cip, clike, cdate)
        VALUES (#{bno}, #{mno}, #{ccomment}, #{cip}, #{clike}, #{cdate})
    </insert>

    <!-- 댓글 삭제 -->
    <delete id="deleteComment" parameterType="int">
        DELETE FROM comment WHERE cno = #{cno}
    </delete>

</mapper>
